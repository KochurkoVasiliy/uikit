{
    "extends": "@kochurko/ts-config",
    "compilerOptions": {
        "outDir": "build/esm",
        "baseUrl": "./",
        "lib": ["ES2020", "DOM"],
        "module": "esnext",
        "resolveJsonModule": true,
        "importHelpers": true,
        "verbatimModuleSyntax": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true
    },
    "references": [
        { "path": "./packages/ui-components" }
        //{ "path": "./packages/ui-icons" }
    ],
    "include": ["src/**/*.ts", "src/**/*.tsx", "test-utils/*"]
}
